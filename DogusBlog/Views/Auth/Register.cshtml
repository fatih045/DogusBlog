

@model DogusBlog.Models.Dto.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="form-group mb-3">
                            <label for="Username">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" id="Username" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="Email" required />
                        </div>
                        <div class="form-group mb-4">
                            <label for="Password">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" id="Password" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Zaten bir hesabınız var mı? <a href="/Auth/Login">Giriş Yap</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
